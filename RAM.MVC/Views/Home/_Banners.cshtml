
<section class="main-slider no-bottom-margin has-pagination has-navigation stop-on-hover" data-interval="10000">
    <div class="slider-item-list">
        @foreach (var banner in Model.Banners)
        { 
            <div class="slider-item" data-label="">

                    <!-- SLIDE 1 BACKGROUND IMAGE : begin -->
                    <img class="slider-item-bg" src="@banner.ImagePath" alt="@banner.AltText">
                    <!-- SLIDE 1 BACKGROUND IMAGE : end -->

                    <div class="slider-item-inner">
                        <div class="slider-item-content valign-bottom">
                            <div class="wrapper">

                                <!-- SLIDE 1 CONTENT : begin -->
                                <div class="row">
                                    <div class="col-md-7">
                                        <h2 data-inview-animation="fadeInDown">@banner.Title</h2>
                                        <p class="big" data-inview-animation="fadeInUp">
                                            <em>
                                                @banner.SubText1
                                            </em>
                                        </p>
                                    </div>
                                </div>
                                <!-- SLIDE 1 CONTENT : end -->

                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</section>
