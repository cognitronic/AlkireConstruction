@model RAM.Controllers.ViewModels.HomeView

<div class="widget posts-widget">
    <h3 class="widget-title">Latest Posts<span class="decor"></span></h3>
    <div class="widget-content">
        <div class="widget-content-inner">
            <ul class="post-list paginated">
                @foreach (var p in Model.Posts.Take(2))
                {
                    <li class="post has-thumb">
                    <a class="post-thumb" href="/Blog/Post/@p.Title.Replace(" ", "-")"><img src="@p.ImagePath" alt="@p.Title"></a>
                    <h4 class="post-title"><a href="/Blog/Post/@p.Title.Replace(" ", "-")">@p.Title</a></h4>
                        <ul class="post-info">
                            <li><i class="ico fa fa-clock-o"></i> @p.DatePosted.ToShortDateString()</li>
                            <li>
                                <i class="ico fa fa-folder"></i>
                                @foreach (var t in @p.Tags)
                                {
                                    <a href="#">@t.TagRef.Name, </a>
                                }
                            </li>
                        </ul>
                </li>
                }
            </ul>
        </div>
    </div>
</div>
